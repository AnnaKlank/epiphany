    "version": "0.2.0",
    "configurations": [
        {
            "name": "epicli",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",      
            "pythonPath": "${config:python.pythonPath}",
            "env": { "PYTHONPATH": "${workspaceFolder}" },
            "module": "epicli.__main",
            "console": "integratedTerminal",
            //"args": ["template"]   
            "args": ["infra", "build"]           
        },
        {
            "name": "infra",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",      
            "pythonPath": "${config:python.pythonPath}",
            "env": { "PYTHONPATH": "${workspaceFolder}" },
            "module": "infrastructure.__main",
            "console": "integratedTerminal",
            "args": ["build"]           
        },
        {
            "name": "repo",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",      
            "pythonPath": "${config:python.pythonPath}",
            "env": { "PYTHONPATH": "${workspaceFolder}" },
            "module": "repository.__main",
            "console": "integratedTerminal",
            "args": ["create"]           
        },
        {
            "name": "components",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",      
            "pythonPath": "${config:python.pythonPath}",
            "env": { "PYTHONPATH": "${workspaceFolder}" },
            "module": "components.__main",
            "console": "integratedTerminal",
            "args": ["apply"]           
        }
    ]	
}